<div class="fixed inset-0 flex items-center justify-center p-4">
  <%= render FlatPack::Card::Component.new(style: :default) do |card| %>
    <% card.header do %>
      <h2 class="text-xl font-semibold">Sign In</h2>
    <% end %>

    <% card.body do %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="space-y-4">
          <%= render FlatPack::EmailInput::Component.new(
            name: "user[email]",
            label: "Email",
            value: "admin@admin.com",
            placeholder: "you@example.com"
          ) %>

          <%= render FlatPack::PasswordInput::Component.new(
            name: "user[password]",
            label: "Password",
            value: "Password",
            required: true
          ) %>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center gap-2">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Remember me" %>
            </div>
          <% end %>

          <%= f.submit "Sign In",
            class: "inline-flex items-center justify-center gap-2 rounded-[var(--radius-md)] font-medium transition-colors duration-[var(--transition-base)] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-ring)] focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 px-4 py-2 text-sm bg-[var(--color-primary)] hover:bg-[var(--color-primary-hover)] text-[var(--color-primary-text)] shadow-[var(--shadow-sm)] cursor-pointer" %>
        </div>
      <% end %>
    <% end %>

    <% card.footer do %>
      <p class="text-sm text-gray-500">
        Default: admin@admin.com / Password
      </p>
    <% end %>
  <% end %>
</div>